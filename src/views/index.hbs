<div class="col-md-6 offset-md-3">
  <div class="card bg-dark text-light">
    <div class="card-header">
      <h1 class="h4 text-white text-uppercase">Módulo administrador</h1>
      <label for="lastname">Lista de administradores:</label>
    </div>
    <div class="card-body">
      {{#if contacts}}
      <ul class="list-group">
        {{#each contacts}}
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div class="my-auto text-secondary">
            <h3 class="h6">{{firstname}} {{lastname}}</h3>
            <p>{{email}}</p>
          </div>
          <div>
            <a href="/delete-contact/{{id}}" class="btn btn-danger"><i class="fa-solid fa-trash mr-1"></i>Eliminar</a>
            <a href="/edit-contact/{{id}}" class="btn btn-secondary"><i class="fa-solid fa-pen mr-1"></i>Editar</a>
          </div>
        </li>
        {{/each}}
      </ul>
      {{!-- {{else}}
      <p class="fs-4 text-center">No Contacts Yet.</p> --}}
      {{/if}}
    </div>
    <div class="card-footer">
      <form action="{{#unless contact.id}}/new-contact{{else}}/update-contact/{{contact.id}}{{/unless}}" method="POST">
        <div class="row">
          <div class="col">
            <label for="firstname">Nombres:</label>
            <input type="text" name="firstname" placeholder="Nombres" class="form-control mb-3"
              value="{{contact.firstname}}" autofocus />
          </div>
          <div class="col">
            <label for="lastname">Apellidos:</label>
            <input type="text" name="lastname" placeholder="Apellidos" class="form-control mb-3"
              value="{{contact.lastname}}" />
          </div>
        </div>
        <div class="row">
          <div class="col">
            <label for="email">Correo:</label>
            <input type="email" name="email" placeholder="Correo" class="form-control mb-3" value="{{contact.email}}" />
          </div>
          <div class="col">
            <label for="phone">Teléfono:</label>
            <input type="tel" name="phone" placeholder="Teléfono" class="form-control mb-3" value="{{contact.phone}}" />
          </div>
        </div>
        {{#if contact.id}}
        <div class="row align-items-center ml-0 mt-2">
          <button class="btn btn-success mr-2">Actualizar</button>
          <a href="/" class="btn btn-secondary"><i class="fa-solid fa-arrow-left mr-1"></i>Cancelar</a>
        </div>
        </a>
        {{else}}
        <div class="row align-items-center ml-0 mt-2">
          <button class="btn btn-primary mr-2"><i class="fa-solid fa-plus mr-1"></i>Agregar</button>
          <a href="/" class="btn btn-secondary">Cancelar</a>
        </div>
        {{/if}}
      </form>
    </div>
  </div>
</div>